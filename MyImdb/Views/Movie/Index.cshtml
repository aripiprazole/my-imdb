@model List<MovieListViewModel>

@{
	ViewBag.Title = "List";
	Layout = "_Layout";
}

<div class="p-3">
	@if (ViewBag.Message != null)
	{
		<div class="alert alert-info">
			<p>@ViewBag.Message</p>
		</div>
	}

	<b> Movies List:</b>
	<br/>
	<table class="table">
		<tr>
			<th>#</th>
			<th>Title</th>
			<th>Year</th>
		</tr>
		@foreach (var movie in Model)
		{
			<tr>
				<td>@movie.Rank</td>
				<td>
					<a asp-action="Show" asp-route-movieTitle=@movie.Title>
						@movie.Title
					</a>
				</td>
				<td>@movie.Year</td>
			</tr>
		}
	</table>
	<a asp-action="Create" class="btn btn-primary">
		<i class="fa-solid fa-plus-large"></i>
		Add movie
	</a>
</div>
